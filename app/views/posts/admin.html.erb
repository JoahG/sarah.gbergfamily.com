<% @title = "Admin" %>

<% if current_user %>
	<div class="column two right-align">
		<h2> Posts </h2>
		<ul class="nolst">
			<% @posts.each do |post| %>
				<li><%= link_to post.title, post %> - <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></li>
			<% end %>
			<li> <%= link_to "New Post", new_post_path %></li>
		</ul>
	</div>

	<div class="column two left-align">
		<h2> Admins </h2>
		<ul class="nolst">
			<% @users.each do |user| %>
				<li><%= user.name %> - <%= link_to 'Edit', edit_user_path(user) %> | <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></li>
			<% end %>
			<li> <%= link_to "New Admin", new_user_path %></li>
		</ul>
	</div>
<% else %>
	<%= redirect_to_home %>
<% end %>